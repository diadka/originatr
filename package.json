{
  "name": "fuckr",
  "version": "1.7.0",
  "description": "Desktop grindr client for Mac and Windows",
  "main": "package.js",
  "scripts": {
    "build": "cat fuckr/services/*.coffee fuckr/controllers/*.coffee fuckr/directives.coffee fuckr/fuckr.coffee | coffee -cbs > fuckr/fuckr.js",
    "package": "npm run build && node package.js",
    "run": "npm run build && nw ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tomlandia/fuckr.git"
  },
  "author": "@tomlandia",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/tomlandia/fuckr/issues"
  },
  "homepage": "https://github.com/tomlandia/fuckr",
  "devDependencies": {
    "nw-builder": "*",
    "archiver": "*"
  },
  "optionalDependencies": {
    "appdmg": "*"
  }
}
